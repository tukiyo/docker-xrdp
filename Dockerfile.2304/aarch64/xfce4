FROM tukiyo3/xrdp-aarch64:core

# Xfce4
RUN pkgadd.sh \
      xfce4 \
      xfce4-terminal \
      xfce4-screenshooter \
      xubuntu-artwork
RUN sed -i -e 's/openbox-session/xfce4-session/g' /etc/skel/.xsession

RUN mkdir -p /etc/skel/.config/openbox
RUN { \
	echo 'xfce4-terminal'; \
    } > /etc/skel/.config/openbox/autostart
